// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  email        String?   @unique
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  habits   Habit[]
  jobs     Job[]
}

model Account {
  id                 String   @id @default(cuid())
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId             String
  provider           String
  providerAccountId  String
  accessToken        String?
  refreshToken       String?
  createdAt          DateTime @default(now())

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  sessionToken String   @unique
  csrfToken    String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Habit {
  id          String         @id @default(cuid())
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  title       String
  description String?
  frequency   String
  customRule  String?
  startDate   DateTime?
  endDate     DateTime?
  timezone    String         @default("Europe/Istanbul")
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  deletedAt   DateTime?

  logs     HabitLog[]
  streaks  StreakSnapshot[]
}

model HabitLog {
  id        String   @id @default(cuid())
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  habitId   String
  date      DateTime
  count     Int      @default(1)
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model StreakSnapshot {
  id             String   @id @default(cuid())
  habit          Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  habitId        String
  streakLength   Int
  lastActiveDate DateTime?
  updatedAt      DateTime @updatedAt
}

model Job {
  id        String    @id @default(cuid())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  type      String
  status    String   @default("PENDING")
  location  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
